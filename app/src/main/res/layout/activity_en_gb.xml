<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.android.igandroidinternshipapp.enGB">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/england_font" />

    <TextView
        android:id="@+id/locationtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:gravity="center"
        android:text="SWIPE HERE TO CHANGE LOCATION"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/loc_icon"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/location" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loc_icon"
        android:layout_marginBottom="38dp"
        app:srcCompat="@drawable/flaga_de" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/flaga_fr" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/swipe" />


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_below="@+id/loc_icon"
        android:layout_marginTop="10dp" />







</RelativeLayout>